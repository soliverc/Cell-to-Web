{
    "manifest_version": 3,
    "name": "YourExtensionName",
    "version": "1.3",
    "icons": {
        "16": "icons/ic16.png",
        "48": "icons/ic48.png",
        "128": "icons/ic128.png"
    },
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/ic16.png",
        "48": "icons/ic48.png",
        "128": "icons/ic128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  